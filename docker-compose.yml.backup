version: '3.8'

services:
  db:
    image: postgres:14
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=football_predictions
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - app-network

  redis:
    image: redis:alpine
    ports:
      - "6379:6379"
    networks:
      - app-network

  backend:
    build: ./backend
    volumes:
      - ./backend:/app
      # üìù PERSISTENT LOGGING VOLUMES - Logs persist between container restarts
      - ./logs:/app/logs                    # Main logs directory
      - ./logs:/app/backend/logs            # Backend-specific logs  
      - backend_logs:/var/log/app           # Additional log location for system logs
    ports:
      - "8000:8000"
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_started
    environment:
      - DATABASE_URI=postgresql://postgres:postgres@db:5432/football_predictions
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - SECRET_KEY=developmentsecretkey
      - JWT_SECRET_KEY=developmentjwtsecretkey
      - CREATE_TABLES_ON_STARTUP=True
      - CORS_ORIGINS=http://localhost:3000
      - FOOTBALL_API_KEY=2e229688fb1a199c6243f07a2b6e4b54
      - API_V1_STR=/api/v1
    networks:
      - app-network

  frontend:
    build: ./frontend
    volumes:
      - ./frontend:/app
      - /app/node_modules
      # üìù FRONTEND LOGS (if you want frontend logging too)
      - ./logs/frontend:/app/logs
    ports:
      - "3000:3000"
    depends_on:
      - backend
    environment:
      - NODE_ENV=development
      - REACT_APP_API_URL=http://localhost:8000/api/v1
      - REACT_APP_ENV=development
    networks:
      - app-network

volumes:
  postgres_data:
  # üìù PERSISTENT LOG VOLUMES
  backend_logs:
    driver: local

networks:
  app-network:
    driver: bridge