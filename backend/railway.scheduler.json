{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.scheduler"
  },
  "deploy": {
    "startCommand": "python -m app.scheduler_minimal",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "maxRestarts": 5
  },
  "deploy.envs": {
    "PORT": "8001"
  }
}
