# .env.railway.example - Environment variables for Railway deployment
# Copy this to your Railway environment variables

# === BACKEND ENVIRONMENT VARIABLES ===

# Database Configuration (Railway PostgreSQL add-on will provide these)
DATABASE_URI=postgresql://username:password@hostname:port/database_name
DB_HOST=hostname
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password
DB_NAME=database_name

# Redis Configuration (Railway Redis add-on will provide these)
REDIS_HOST=hostname
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Keys (GENERATE STRONG RANDOM VALUES FOR PRODUCTION!)
SECRET_KEY=your-super-secret-key-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars

# CORS Origins (Add your Railway frontend URL here)
CORS_ORIGINS=https://your-frontend-url.railway.app,https://your-custom-domain.com

# Football API
FOOTBALL_API_KEY=your-football-api-key

# Production Settings
API_RATE_LIMIT=300
CREATE_TABLES_ON_STARTUP=true
NODE_ENV=production

# === FRONTEND ENVIRONMENT VARIABLES ===

# API URL (This will be your Railway backend URL)
REACT_APP_API_URL=https://your-backend-url.railway.app/api/v1
REACT_APP_ENV=production